<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint_layout_main_menu">

    <Button
        android:id="@+id/QR_Inventory_Button"
        android:layout_width="286dp"
        android:layout_height="65dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_button_main_menu"
        android:backgroundTint="@color/gray"
        android:text="QR Inventory"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_textView" />

    <Button
        android:id="@+id/Map_Button"
        android:layout_width="286dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_button_main_menu"
        android:backgroundTint="@color/gray"
        android:text="Map"
        android:textColor="#000000"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QR_Inventory_Button" />

    <Button
        android:id="@+id/Search_Button"
        android:layout_width="286dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_button_main_menu"
        android:backgroundTint="@color/gray"
        android:text="Search"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Map_Button" />

    <Button
        android:id="@+id/Leaderboard_Button"
        android:layout_width="286dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_button_main_menu"
        android:backgroundTint="@color/gray"
        android:text="@string/leaderboard_title"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Search_Button" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Other_Player_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        app:backgroundTint="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Leaderboard_Button"
        app:srcCompat="@drawable/ic_user_scan_black" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/admin_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        app:backgroundTint="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Camera_Button"
        app:layout_constraintStart_toEndOf="@+id/Other_Player_Button"
        app:srcCompat="@drawable/ic_admin" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Camera_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        app:backgroundTint="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Leaderboard_Button"
        app:srcCompat="@drawable/ic_qr_scan_black" />

    <ImageView
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:id="@+id/avatar_imageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        tools:srcCompat="@tools:sample/avatars"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/user_textView"
        android:layout_width="286dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="Username"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar_imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>